  "search_instructions": {
    "for_apps_script": {
      "recommendation": "Use vector search or keyword matching across all JSON files",
      "search_fields": [
        "tags",
        "keywords",
        "problem_keywords",
        "industry",
        "pain_points",
        "questions",
        "use_case"
      ],
      "response_format": "Return relevant records with context and related recommendations"
    }
  },
  "html_interface_recommendations": {
    "essential_fields": [
      {
        "field_type": "search_bar",
        "purpose": "Main query input",
        "placeholder": "Ask anything: What app handles inventory? How to sell to restaurants? What solves accounting issues?",
        "search_mode": "intelligent_keyword_and_context"
      },
      {
        "field_type": "dropdown",
        "name": "query_category",
        "options": [
          "Product Knowledge (What does X do?)",
          "Industry Solution (I'm meeting a client in X industry)",
          "Problem Solution (Client has X problem)",
          "Multi-App Bundle (Need workflow solution)",
          "Sales Script (How do I pitch/handle objection?)",
          "Quick Lookup (Just show me facts)"
        ],
        "purpose": "Help narrow down search scope"
      },
      {
        "field_type": "dropdown",
        "name": "industry_filter",
        "options": [
          "Any Industry",
          "Real Estate",
          "Healthcare",
          "Manufacturing",
          "Retail/E-commerce",
          "Professional Services",
          "Education",
          "Finance/Accounting",
          "Marketing Agency",
          "Restaurants/Hospitality",
          "Construction",
          "Non-Profit",
          "IT Services",
          "Legal",
          "Other"
        ],
        "purpose": "Filter by industry if relevant"
      },
      {
        "field_type": "multi_select",
        "name": "client_size",
        "options": [
          "Solo/Freelancer",
          "Small Team (2-10)",
          "SMB (11-50)",
          "Mid-Market (51-200)",
          "Enterprise (200+)"
        ],
        "purpose": "Help recommend appropriate solutions by company size"
      },
      {
        "field_type": "toggle",
        "name": "show_competitors",
        "default": false,
        "purpose": "Include competitor comparison in results"
      },
      {
        "field_type": "toggle",
        "name": "show_pricing",
        "default": false,
        "purpose": "Include pricing guidance"
      }
    ],
    "response_display": {
      "format": "structured_cards",
      "sections": [
